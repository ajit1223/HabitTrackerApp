<div class="w-100 d-flex flex-column justify-content-between align-items-center">
  <!-- container -->
  <div id="addHabitContainer"
    class="container d-flex flex-column justify-content-around align-item shadow rounded mt-1 p-4">
    <div class="w-100">
      <!-- Form with input field and submit button -->
      <form id="habitForm" action="/create-habit" method="post"
        class="container d-flex flex-column justify-content-around align-item shadow rounded mt-1 p-4">
        <div class="w-100">
          <nav class="navbar rounded bg-white">
            <div class="container-fluid">
              <h2><span>Add your habits</span></h2>

              <button type="button" class="btn add-btn shadow" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Add Habit
              </button>
            </div>
          </nav>
        </div>

        <!-- Input field -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <!-- <h1 class="modal-title fs-5" id="exampleModalLabel">Add New Habits</h1> -->
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <form id="habitForm" action="/create-habit" method="post">
                <div class="modal-body">
                  <div class="mb-3">
                    <label for="name" class="form-label">Habit Name</label>
                    <input type="text" name="name" class="form-control" id="name" placeholder="Enter habit Name" />
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn add-btn shadow">Add Habit</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </form>

    </div>
  </div>
















































  <!-- show list of all the habits added by the user -->
  <div id="habitList" class="container mb-2 overflow-y-scroll overflow-x-hidden p-1 px-2 rounded shadow-sm">
    <!-- heading -->
    <h1 class="text-center">My Habit List</h1>

    <!-- list of all the habits -->
    <% for (let i of myHabits) { %>

      <!-- card of a single habit -->
      <div
        class="w-100 h-auto d-flex justify-content-between align-items-center text-white my-2 p-2 shadow-sm rounded fw-bold list-item">
        <!-- name of habit -->
        <div class="px-1">
          <%= i.name %>
        </div>

        <!-- number of days on which the task is done in past week -->
        <!-- task status for today -->
        <div class="px-1">
          <%= i.completedDays %> / 7 Days | Today: <%= i.weeklyStatus[6]==='true' ? 'Done' : 'Not Done' %>
        </div>
      </div>

      <% } %>
  </div>
</div>